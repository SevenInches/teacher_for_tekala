<body class="horizontal-menu-page">
<section>
  <%= partial 'layouts/nav' %>
  <!--body wrapper start-->
  <div class="wrapper">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-12">
          <section class="panel">
            <table class="table table-striped table-hover table-condensed">
              <thead>
              <tr>
                <th>ID</th>
                <th>学员姓名</th>
                <th>手机号</th>
                <th>教练姓名</th>
                <th>场地</th>
                <th>约车时间</th>
                <th>状态</th>
                <th>订单创建时间</th>
              </tr>
              </thead>
              <tbody>
                <% @order.each do |item|%>
                  <tr>
                    <td><%= item.id %></td>
                    <td><%= item.user.name if item.user.present? %></td>
                    <td><%= item.user.mobile if item.user.present? %></td>
                    <td><%= item.teacher.name if item.teacher.present? %></td>
                    <td><%= item.train_field_name %></td>
                    <td><%= item.book_time %></td>
                    <td><%= item.status_word %></td>
                    <td><%= item.created_at %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <p style="padding: 10px 10px;">每页20条</p>
          </section>
          <div class="row">
            <%= will_paginate @order,renderer: WillPaginate::ViewHelpers::BoostrapLinkRenderer %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!--body wrapper end-->
  <%= partial 'layouts/footer' %>
</section>
</body>