<%= f.text_field :id, :class => 'form-control input-xlarge input-with-feedback',:value => @menu.id,:type => 'hidden'%>
<div class="form-group">
  <label for="firstname" class="col-lg-2 control-label">名字</label>
  <div class="col-lg-6">
    <%= f.text_field :name, :class => 'form-control input-xlarge input-with-feedback', :autofocus => true ,:required => 'required',:value => @menu.name%>
  </div>
</div>

<div class="form-group">
  <label for="firstname" class="col-lg-2 control-label">权重</label>
  <div class="col-lg-6">
    <%= f.text_field :weight, :class => 'form-control input-xlarge input-with-feedback', :placeholder => '为0时不显示在客户端',:autofocus => true ,:required => 'required',:value => @menu.weight%>
  </div>
</div>

<div class="form-group">
  <label for="firstname" class="col-lg-2 control-label">配置</label>
  <div class="col-lg-6">
    <% if @menu.config != 2 %>
      <label class="checkbox-inline">
        <input type="radio" name="user[config]" value="1" checked=""> app
      </label>
      <label class="checkbox-inline">
        <input type="radio" name="user[config]" value="2"> web
      </label>
    <% else %>
      <label class="checkbox-inline">
        <input type="radio" name="user[config]" value="1" checked> app
      </label>
      <label class="checkbox-inline">
        <input type="radio" name="user[config]" value="2" checked> web
      </label>
    <% end %>
  </div>
</div>
<div class="form-group">
  <label for="firstname" class="col-lg-2 control-label"></label>
  <div class="col-lg-6">
    <input type="submit" value="保存" class="btn btn-success">
  </div>
</div>