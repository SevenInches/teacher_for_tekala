<body class="horizontal-menu-page">
<section>
  <%= partial 'layouts/nav' %>
  <!--body wrapper start-->
  <div class="wrapper">
    <div class="container-fluid" style="margin-bottom:20px">
      <div class="row" style="margin-bottom:20px">
        <div class="col-lg-2">
          <a class="btn btn-success" href="/web/news_management/new">添加新闻</a>
        </div>
      </div>
      <div class="row">
          <div class="col-lg-12">
            <section class="panel">
              <table class="table table-striped table-hover table-condensed">
                <thead>
                <tr>
                  <th>ID</th>
                  <th>公告标题</th>
                  <th>阅读数</th>
                  <th>添加时间</th>
                  <th>操作</th>
                </tr>
                </thead>
                <tbody>
                <% @news.each do |new|%>
                  <tr>
                    <td><%= new.id %></td>
                    <td><a href="/web/news_management/detail/<%= new.id %>"><%= new.title %></a></td>
                    <td><%= new.view_count %></td>
                    <td><%= new.created_at%></td>
                    <td><a href="/web/news_management/edit/<%= new.id %>">编辑</a>|<a href="/web/news_management/destroy/<%= new.id %>">删除</a></td>
                  </tr>
                <% end %>
                </tbody>
              </table>
              <p style="padding: 10px 10px;">每页20条</p>
            </section>
            <div class="row">
              <%= will_paginate @news,renderer: WillPaginate::ViewHelpers::BoostrapLinkRenderer %>
            </div>
          </div>
      </div>
    </div>
  </div>

  <!--body wrapper end-->
  <!--footer section start-->
  <%= partial 'layouts/footer' %>
  <!--footer section end-->
</section>
